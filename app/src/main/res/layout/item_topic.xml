<?xml version="1.0" encoding="utf-8"?>
<!-- style="@style/AppCardView" -->
<android.support.v7.widget.CardView
    android:id="@+id/container_topic_holder"
    android:layout_width="match_parent"
    android:layout_height="@dimen/small_list_height"
    style="@style/AppCardView"

    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/small_list_height"
            android:padding="@dimen/icon_padding"
            style="@style/ClickableItem"
            >

            <CheckBox
                android:id="@+id/selectable_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/OneLineTextView"

                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/selectable_checkbox"
                />



        </RelativeLayout>

</android.support.v7.widget.CardView>

